<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical">

        <!-- Menu Icon (Hamburger Icon) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/menuicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:button="@null"
                android:gravity="center"/>

            <!-- Menu Icon Lines -->
            <View
                android:id="@+id/menuIconLine1"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:background="@android:color/black" />

            <View
                android:id="@+id/menuIconLine2"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <View
                android:id="@+id/menuIconLine3"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:background="@android:color/black" />
        </RelativeLayout>

        <!-- Spacer to Center the Logo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mainlogo2"
            android:contentDescription="Main Logo"/>

        <!-- Spacer to Center the Logo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- My Page -->
        <ImageView
            android:id="@+id/mypage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search"
            android:contentDescription="Search Page"/>
    </LinearLayout>

    <!-- Sidebar Section -->
    <RelativeLayout
        android:id="@+id/sidebar"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#deb887"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:translationX="-200dp"
        android:visibility="gone">

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인이 필요합니다."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <!-- 프로필 이미지 -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/mainlogo"
            android:layout_marginBottom="15dp"
            android:contentDescription="Profile Image"/>

        <!-- 메뉴 항목들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 메뉴 항목 1 -->
            <TextView
                android:id="@+id/menu_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="공지사항"
                android:textSize="18sp"
                android:textColor="#000"/>

            <!-- 메뉴 항목 2 -->
            <TextView
                android:id="@+id/menu_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="게임 만들기"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/menu_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="나의 보따리"
                android:textSize="18sp"
                android:textColor="#000"/>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Content Section -->
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
